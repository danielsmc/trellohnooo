html
  box-sizing: border-box
  margin: 0
  min-height: 100%
  overflow-y: scroll
  padding: 0
  background-color: color-green

  color: color-black
  font-size: 20px
  line-height: 1.2
  text-size-adjust: 100%

*, *:before, *:after
  box-sizing: inherit
  margin: 0
  padding: 0
  vertical-align: baseline

*, *:before, *:after
  position: relative

body
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size: 1em
  padding: 1em
  line-height: 1.5
  min-height: 100%
  overflow-x: hidden
