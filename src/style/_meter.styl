.meter-outer
  width: 100%;
  background-color: color-black
  border: 2px solid white
  border-radius: 6px
  height: 2em

.meter-inner
  background: color-red-light
  background: linear-gradient(to bottom, color-red-light 0%, color-red-light 49%, color-red-dark 51%, color-red-dark 100%)
  border-radius: 4px 0 0 4px
  border-right: 2px solid white
  height: 100%
