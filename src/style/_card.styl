.card
  background: white url(../drag-handle.svg) no-repeat top 0.7rem right 1rem;
  background-size: 0.5rem
  border: 2px solid color-purple-dark
  border-radius: 8px
  cursor: grab
  display: block
  margin: 1rem
  padding-top: 0.75rem

.card:hover
  transform: scale(1.025)

.card-title
  font-size: 0.8em
  padding-left: 0.75rem
  width: 80%

.card-age
  color: color-gray
  font-size: 80%
  font-weight: 400
  padding-left: 0.5em

.card-effort
  background-color: color-purple-light
  border-radius: 6px
  display: inline
  float: right
  font-size: 0.7em
  font-weight: 400
  padding: 0.3em 0.5em
  position: relative
  top: -1rem
  right: 5.5rem

.card-value
  background-color: color-gold
  border-radius: 6px
  display: inline
  float: right
  font-size: 0.7em
  font-weight: 400
  padding: 0.3em 0.5em
  position: relative
  top: -1rem
  right: -1.25rem

.card-task
  background-color: color-purple-light
  border-radius: 6px
  font-size: 0.75em
  font-weight: 400
  margin-top: 0.6rem
  margin-right: 0.75rem
  margin-left: 0.75rem
  padding: 0.5em

.card .meter-outer
  height: 0.75rem
  margin-top: 0.5rem

.card-beingdragged
  opacity: 0.3
