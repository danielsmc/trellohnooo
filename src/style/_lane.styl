.lane
  background: rgb(255,247,242)
  background: linear-gradient(to bottom, rgba(255,247,242,1) 0%, rgba(243,231,174,1) 100%)
  border-radius: 10px
  box-shadow: 0 0 0 2px color-gold,
              0 0 0 4px color-brown;
  flex-grow: 1
  flex-basis: 33%
  height: 90vh
  overflow: scroll

.lane-hover
  background: lightgray

.lane-title
  font-size: 1.1em
  margin-top: 1rem
  text-align: center
